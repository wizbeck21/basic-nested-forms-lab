<h1>Create a Recipe</h1>

<%= form_for @recipe do |f|%>
  <%= f.label 'Recipe title:' %>
  <%= f.text_field :title %> <br> <br>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %> <br> <br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %> <br>
  <% end %>

  <%= f.submit %>
<% end %>
